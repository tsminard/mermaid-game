.fishInventoryContainer { /* this just holds all fish inventory slots so they remain within the background image*/
    flex-grow: 1;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    background-size: 100% 100%;
    background-position-y: bottom 0;
    max-height: 80%;
    height: 80%;
    min-height: 80%;
}

.fishSlotContainer { /* this is the actual uss for an individual fish container*/
    margin: 1% auto;
    max-width: 17.5%;
    max-height: 25%;
    background-color: rgb(141, 99, 67);
    border-width: 1px;
    border-color: rgb(255, 195, 59);
    border-radius: 3px;
}

